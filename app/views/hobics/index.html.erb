<%# グループ一覧 %>
  <div class='group-contents'>
    <h2 class='title'>グループ一覧</h2>
    <ul class='group-lists'>
      <% @groups.each do |group| %>
        <%= link_to "#" do %>
          <li class='group-list'>
          <div class='group-img-content'>
            <%= image_tag group.image.variant(resize: '500x500'), class: "group-img" %>
          </div>
        <% end %>
        <div class='group-info'>
          <h3 class='group-name'>
            <%= group.name %>
          </h3>
        </div>
        <% end %>
      </li>
    </ul>
  </div>
<%# /グループ一覧 %>
<%# トーク一覧（ログインユーザーのみ可） %>
  <div class='room-contents'>
    <h2 class='title'>ルーム一覧</h2>
    <ul class='room-lists'>
      <% @rooms.each do |room| %>
        <%= link_to "#" do %>
          <li class='room-list'>
          <div class='room-img-content'>
            <%= image_tag room.image.variant(resize: '500x500'), class: "room-img" %>
          </div>
        <% end %>
        <div class='room-info'>
          <h3 class='room-name'>
            <%= room.name %>
          </h3>
        </div>
        <% end %>
      </li>
    </ul>
  </div>
<%# /トーク一覧（ログインユーザーのみ可） %>