<div class='wrapper'>
  <div class='side-bar'>
    <%= render "messages/_message_side_bar" %>
  </div>
</div>

<%# グループ一覧 %>
  <div class='group-contents'>
    <h2 class='title'>グループ一覧</h2>
    <ul class='group-lists'>
      <% @groups.each do |group| %>
        <%= link_to root_path do %>
          <li class='group-list'>
          <div class='group-img-content'>
            <%= image_tag group.image.variant(resize: '500x500'), class: "group-img" %>
          </div>
        <% end %>
        <div class='group-info'>
          <h3 class='group-name'>
            <%= group.name %>
          </h3>
        </div>
        <% end %>
      </li>
    </ul>
  </div>
<%# /グループ一覧 %>